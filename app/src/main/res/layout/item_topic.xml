<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layout_all_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_table_row"
        android:padding="15dp"
        android:weightSum="4"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_topic"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_rules"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/tv_all_question"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:text="@string/tv_total_question"
            android:textSize="13sp" />


        <ProgressBar
            android:id="@+id/prgBar_topic"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="205dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_table_row"
            android:max="100"
            android:progress="30"
            android:progressDrawable="@drawable/custom_load_progressbar"
            android:progressTint="@color/purple_200" />

        <TextView
            android:id="@+id/tv_currentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="4dp"
            android:text="@string/tv_num"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteY="35dp" />
    </FrameLayout>
</LinearLayout>